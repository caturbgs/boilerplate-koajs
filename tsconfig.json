{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2018",
        "lib": [
            "es2018",
            "esnext.asynciterable"
        ],
        "outDir": "./build",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "@config/*": ["config/*"],
            "@helpers/*": ["helpers/*"],
            "@interface/*": ["interface/*"],
            "@middlewares/*": ["middlewares/*"],
            "@constants/*": ["constants/*"],
        },
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
